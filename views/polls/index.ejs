<%- include('../partials/html-head.ejs') %>
<link rel="stylesheet" href="/stylesheets/polls.css" />
<%- include('../partials/polls-nav.ejs') %>

<main>
    <h1>This is the Poll/index view</h1>
</main>
<div class="poll-on-index-page">
    <% polls.forEach((poll) => { %>
        <div class="poll-on-index-page-content">
            <p class="poll-question-content">
                <span>question: </span>
                <%= poll.question %>
            </p>
            <input class="radio" type="radio" id="answer1-input" name="answerRadio" value="answer1-input">
            <label class="answer1" for="answer1-input">
                <p class="answer1">
                    <span>answer1: </span>
                    <%= poll.answer1 %>
                </p>
            </label>
            <input class="radio" type="radio" id="answer2-input" name="answerRadio" value="answer2-input">
            <label class="answer2" for="answer2-input">
                <p class="answer2">
                    <span>answer2: </span>
                    <%= poll.answer2 %>
                </p>
            </label>
            <input class="radio" type="radio" id="answer3-input" name="answerRadio" value="answer3-input">
            <label class="answer3" for="answer3-input">
                <p class="answer3">
                    <span>answer3: </span>
                    <%= poll.answer3 %>
                </p>
            </label>
            <input class="radio" type="radio" id="answer4-input" name="answerRadio" value="answer4-input">
            <label class="answer4" for="answer4-input">
                <p class="answer4">
                    <span>answer4: </span>
                    <%= poll.answer4 %>
                </p>
            </label>
        </div>
    <% }) %>
</div>
    
    <a href="/polls/new" class="create-poll-link">Create Poll
    </a>
    
