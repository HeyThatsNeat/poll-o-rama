<%- include('../partials/html-head.ejs') %>
<link rel="stylesheet" href="/stylesheets/polls.css" />
<%- include('../partials/profiles-nav.ejs') %>

<main>
    <h1>Poll-Roulette</h1>
    <% if (user?.profile.avatar) { %>
        <a href="/profiles/<%= user?.profile._id %>">
            <div>
                <img
                src="<%= user.profile.avatar %>"
                alt="<%= user.profile.name %> avatar"
                />
            </div>
        </a>
    <% } %>
    <div class="poll-roulette-container">
        <p><span>Question: </span>Select a random profile to visit!</p>
        <div class="options">
            <input type="radio" id="option1">
            <label for="option1">
                <span>Option 1: </span>
            </label>
        </div>
        <div class="options">
            <input type="radio" id="option2">
            <label for="option2">
                <span>Option 2: </span>
            </label>
        </div>
        <div class="options">
            <input type="radio" id="option3">
            <label for="option3">
                <span>Option 3: </span>
            </label>
        </div>
        <div class="options">
            <input type="radio" id="option4">
            <label for="option4">
                <span>Option 4: </span>
            </label>
        </div>
        <div class="poll-roulette-submit-button">
            <button class="poll-roulette-button">Submit</button>
        </div>
    </div>
</main>


<%- include('../partials/footer.ejs') %>
